{
  "name": "opium-js",
  "productName": "opiumJS",
  "version": "1.1.0",
  "description": "A desktop app for running Javascript",
  "main": "main.js",
  "scripts": {
    "build": "tsc",
    "prestart": "npm run build",
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "author": "Prasanjit Singh",
  "license": "MIT",
  "build": {
    "productName": "opiumJS",
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "directories": {
      "buildResources": "assets",
      "output": "dist"
    }
  },
  "devDependencies": {
    "electron": "^3.0.0-beta.8",
    "electron-builder": "^20.28.3",
    "typescript": "^2.5.2"
  },
  "dependencies": {
    "monaco-editor": "^0.14.3"
  }
}
